<form action="/create" method="POST">
  <h2>Добавить Пациента</h2>
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate" name="name">
          <label for="icon_prefix">Имя пациента</label>
        </div>
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" type="tel" class="validate" name="phone">
          <label for="icon_telephone">Номер пациента</label>
        </div>
      </div>
      <div class="row">
  <button type="submit" class="btn col s12 l4">Добавить</button>
  </div>
    </form>
  </div>
  
</form>